{{#each bucketlists as |bucketlist|}} {{log bucketlist}}


<!-- Developers, why are we using data-id and not just id? -->
<h1 data-id="{{bucketlist.id}}">
    <small>Name: {{bucketlist.bl_name}}</small>
</h1>

<ul data-id="{{bucketlist.id}}">
    <li>{{#if bucketlist.task}} {{bucketlist.task}} {{else}} No task {{/if}}
    </li>
    <li>
        <button type="submit">Remove</button>
    </li>
    <li>
        <form class="bucketlist-update-form">
            <fieldset>
                <h2>Update Your Bucket List!</h2>
                <input type="text" name="bucketList[id]" id="bucketlist-id-update" placeholder="Resource ID Here">
                <input type="text" name="bucketlist[bl_name]" placeholder="Update your bl name">
                <br>
                <input type="text" name="bucketlist[task]" placeholder="Add to your list">
                <br>
                <input type="submit" value="Let's make this list!">
            </fieldset>
        </form>
    </li>
</ul>

{{/each}}